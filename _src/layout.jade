doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='HandheldFriendly', content='True')
    meta(name='MobileOptimized', content='320')
    meta(name='viewport', content='width=device-width, minimum-scale=1.0, maximum-scale=1.0')

    link(href='/style.css', rel='stylesheet', type="text/css")

    block page_title
      title exact change only

    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-47887894-1', 'auto');
      ga('send', 'pageview');

  body.HolyGrail.Site
    header
    .HolyGrail-body
      main.HolyGrail-content.Site-content
        block content
          != self.content
      nav.HolyGrail-nav
        a(href="/")
          h1.site_title
            | exact
            <br/>
            | change
            <br/>
            | only
        ul.contacts
          li
            a(href="mailto:" + package.author.email)= package.author.email
          li
            a(href="https://twitter.com/adamwong246") twitter
          li
            a(href="github.com/adamwong246") github
          li
            a(href="http://stackexchange.com/users/304854/adamwong246?tab=top") stack exchange
        ul.pages
          li
            a(href="/README.html") README.html
          li
            a(href="/resume.html") resume.html
          li
            a(href="/resume.pdf") resume.pdf
          li
            a(href="https://raw.githubusercontent.com/adamwong246/adamwong246.github.io/master/_src/resume.md") resume.md
        ul.blog_entries
          - for entry in blog_entries
            li
              a(href=entry.url)= entry.meta.title
      //aside.HolyGrail-ads

    footer
      a(href='/') home
      br
      a(href=package.repository.url) source
      br
      = "v" + package.version
      br
      span= package.author.name
      br
      a(href="mailto:" + package.author.email)= package.author.email
      br
      span 2015
